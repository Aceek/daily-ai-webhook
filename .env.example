# ===========================================
# AI News Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# -------------------------------------------
# PostgreSQL Database
# -------------------------------------------
POSTGRES_USER=ainews
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=ainews

# -------------------------------------------
# n8n Configuration
# -------------------------------------------
N8N_USER=admin
N8N_PASSWORD=changeme

# -------------------------------------------
# Discord Webhook (for n8n direct posting)
# -------------------------------------------
# Create a webhook in your Discord server:
# Server Settings > Integrations > Webhooks > New Webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# -------------------------------------------
# Discord Bot (for interactive commands)
# -------------------------------------------
# Create a bot at https://discord.com/developers/applications
# Bot > Token > Copy
DISCORD_TOKEN=your_bot_token_here

# Optional: Restrict bot to specific guild (faster command sync)
# Right-click your server > Copy Server ID (Developer Mode must be enabled)
DISCORD_GUILD_ID=

# Optional: Channels for proactive posting
DAILY_CHANNEL_ID=
WEEKLY_CHANNEL_ID=

# -------------------------------------------
# Claude Service Configuration
# -------------------------------------------
CLAUDE_MODEL=sonnet
CLAUDE_TIMEOUT=600
CLAUDE_RETRY_COUNT=1
CLAUDE_LOG_LEVEL=info
